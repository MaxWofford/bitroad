- provide(:title, "Create Listing")

.row
  .large-6.columns
    %h1 Create Listing
    = simple_form_for @listing do |f|
      = f.input :name
      = f.input :description
      = f.input :file
      = f.input :price, label: "Price (in BTC)",
        hint: "10% of every purchase goes to a Bitcoin-accepting charity."
      = f.input :bitcoin_address
      = f.button :submit
